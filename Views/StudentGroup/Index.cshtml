@using System.Web.Mvc;
@using StudentExams.ViewModels;

@{
    ViewBag.Title = "Группы";
}

@Html.Partial("GridView", new GridViewModel()
{
    Items = ViewBag.Items,
    IdProperty = "Id",
    AddNewText="Добавить группу...",
    DeleteConfirmText = "Удалить группу?",
    AddNewUrl = Url.Action("Edit"),
    EditUrl = Url.Action("Edit"),
    DeleteUrl = Url.Action("Delete"),
    Columns = new GridViewColumn[]
    {
        new GridViewColumn("Имя группы", "Name") { HeaderStyleSpec="background-color: #e0e0e0;" },
        new GridViewColumn("Кол-во студентов", "StudentsCount") { StyleSpec="text-align: center; width: 100px;" }
    },
    Commands = new GridViewCommand[]
    {
        new GridViewCommand("...", Url.Action("Index", "Students")) { Hint = "Редактировать список студентов" }
    }
})