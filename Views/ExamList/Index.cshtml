@using System.Web.Mvc;
@using StudentExams.ViewModels;

@{
    ViewBag.Title = "Ведомости";
}

@Html.Partial("GridView", new GridViewModel()
{
    Items = ViewBag.Items,
    IdProperty = "Id",
    AddNewText = "Создать ведомость...",
    DeleteConfirmText = "Удалить ведомость?",
    AddNewUrl = Url.Action("Create"),
    EditUrl = Url.Action("Edit"),
    DeleteUrl = Url.Action("Delete"),
    Columns = new GridViewColumn[]
    {
        new GridViewColumn("Дата", "ExamDate") { StyleSpec="width: 100px; text-align: center;", Format="dd.MM.yyyy" },
        new GridViewColumn("Тип", "ExamType"),
        new GridViewColumn("Преподаватель", "TeacherName"),
        new GridViewColumn("Предмет", "PredmetName"),
        new GridViewColumn("Группа", "StudentGroupName")
    }
})