@using System.Web.Mvc;
@using StudentExams.ViewModels;

@{
    ViewBag.Title = "Предметы";
}

@Html.Partial("GridView", new GridViewModel()
{
    Items = ViewBag.Items,
    IdProperty = "Id",
    AddNewText="Добавить предмет...",
    DeleteConfirmText = "Удалить предмет?",
    AddNewUrl = Url.Action("Edit"),
    EditUrl = Url.Action("Edit"),
    DeleteUrl = Url.Action("Delete"),
    Columns = new GridViewColumn[]
    {
        new GridViewColumn("Наименование предмета", "Name"),
    }
})